{
  "name": "@eonian/crypto-market-api",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "dev": "concurrently -c \"cyan,magenta,green\" \"npm:test:watch\" \"npm:start:watch\"",
    "build": "tsc",
    "build:watch": "tsc -w",
    "start": "node dist/index.js",
    "start:watch": "nodemon src/index.ts",
    "clean": "rm -rf dist",
    "deploy": "npm run clean && fly deploy",
    "test": "jest",
    "test:update:snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "test:only": "jest --testPathPattern",
    "test:e2e": "jest --testMatch='**/*.e2e-spec.ts'",
    "test:e2e:only": "npm test:e2e --testPathPattern"
  },
  "dependencies": {
    "@tryfabric/martian": "^1.2.4",
    "@types/showdown": "^2.0.6",
    "auth0": "^4.0.1",
    "express": "^4.19.2",
    "mongoose": "^7.5.3",
    "node-fetch": "2",
    "notion-to-md": "^3.1.1",
    "resend": "^1.1.0",
    "showdown": "^2.1.0",
    "tslib": "^2.6.3",
    "dotenv": "^16.4.5",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@flydotio/dockerfile": "^0.5.8",
    "@jest/globals": "^29.7.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.7.0",
    "@types/node-fetch": "^2.6.6",
    "@types/react": "^18.2.24",
    "concurrently": "^8.2.1",
    "dotenv": "^16.3.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "dockerfile": {
    "cache": ""
  }
}
